<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/complete_traceroute_rootview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ultron.tamu_carpool.personalinfo.CompleteActivity"
    android:weightSum="1"
    android:clickable="true"
    android:background="@color/accent_material_dark">

    <ScrollView
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:id="@+id/complete_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginBottom="0dp">

        <LinearLayout
            android:id="@+id/complete_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/complete_idnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="身份证号"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:digits="0123456789X"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/complete_drive_idnumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="驾驶证号"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZ-"
                    android:visibility="gone"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/complete_number_plate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="车牌号"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:visibility="gone"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/complete_cartype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="车型"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:visibility="gone"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/complete_maxpsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="最大载客数"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:inputType="number"/>
            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/complete_submit"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="提交"
                android:textStyle="bold"
                android:background="@color/accent_material_light"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout >
